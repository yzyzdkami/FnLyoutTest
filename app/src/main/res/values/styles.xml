<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GameBlock">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">#c0c0c0</item> <!-- 设置背景颜色 -->
        <item name="android:textSize">24sp</item> <!-- 设置文字大小 -->
        <item name="android:gravity">center</item> <!-- 设置文字居中显示 -->
    </style>

    <style name="ControlButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">#2196F3</item> <!-- 设置按钮背景颜色 -->
        <item name="android:textColor">#FFFFFF</item> <!-- 设置按钮文字颜色 -->
        <item name="android:padding">10dp</item> <!-- 设置按钮内边距 -->
    </style>

</resources>